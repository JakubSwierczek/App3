<Page
    x:Class="App3.QUIZ"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="-4,0,4,0">
        <Grid HorizontalAlignment="Center" Height="620" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="340">
            <Grid.RowDefinitions>
                <RowDefinition Height="102*"/>
                <RowDefinition Height="245*"/>
                <RowDefinition Height="273*"/>
            </Grid.RowDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton" Content="BACK" HorizontalAlignment="Left" Margin="10,187,0,0" Grid.Row="2" VerticalAlignment="Top" Width="133" Height="32"                         />
            <Button x:ConnectionId='2' x:Name="randomButton" Content="Random" HorizontalAlignment="Right" Margin="0,187,14,0" Grid.Row="2" VerticalAlignment="Top" Width="133" Height="32"                           />
            <TextBlock x:ConnectionId='3' x:Name="nameTextBlock" HorizontalAlignment="Center" Margin="10,18,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="48" Width="320" TextAlignment="Center" Grid.RowSpan="2"/>
            <Grid HorizontalAlignment="Center" Height="214" Margin="7,10,13,0" Grid.Row="1" VerticalAlignment="Top" Width="320">
                <Image x:ConnectionId='6' x:Name="image" Source="" HorizontalAlignment="Left" Height="194" Margin="10,10,0,0" VerticalAlignment="Top" Width="300"/>
            </Grid>
            <TextBox x:ConnectionId='4' x:Name="answer" HorizontalAlignment="Center" Margin="45,10,46,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="33" Width="249"/>
            <Button x:ConnectionId='5' x:Name="checkButton" Content="Check the answer" HorizontalAlignment="Center" Margin="23,82,28,0" Grid.Row="2" VerticalAlignment="Top" Width="289" Height="62"                          />
        </Grid>

    </Grid>
</Page>

